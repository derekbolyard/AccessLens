{
  "ConnectionStrings": {
    "SqliteConnection": "Data Source=accesslens.db"
  },
  "AWS": {
    "Region": "us-east-2",
    "S3Bucket": "accesslens-reports"
  },
  "Stripe": {
    "SecretKey": "sk_test_YourStripeSecretKey",
    "WebhookSecret": "whsec_YourStripeWebhookSecret"
  },
  "Playwright": {
    "Headless": true,
    "Args": [ "--disable-dev-shm-usage" ]
  },
  "Captcha": {
    "hCaptchaSecret": "0x0000000000000000000000000000000000000000"
  },
  "RateLimiting": {
    "WindowMinutes": 60,
    "MaxStarterScansPerHour": 3,
    "MaxUnverifiedScansPerHour": 1,
    "MaxScansPerEmailPerDay": 5,
    "MaxConcurrentScans": 5,
    "MaxScanDurationSeconds": 30
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Gmail": {
    "FromEmail": "you@yourdomain.com",
    "OAuthClientId": "<your-client-id>.apps.googleusercontent.com",
    "OAuthClientSecret": "<your-client-secret>",
    "RefreshToken": "<the-long-lived-refresh-token>"
  },
  "Gcs": {
    "BucketName": "my-accesslens-reports",
    "ServiceAccountJson": "path/to/service-account.json"
  },
  "AllowedHosts": "*"
}
